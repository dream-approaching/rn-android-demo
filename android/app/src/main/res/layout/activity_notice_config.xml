<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.lieying.petcat.widget.TitleView
        android:id="@+id/title_notice_config_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusableInTouchMode="true"
        app:back_image="@drawable/ic_input_back"
        app:line_bg_color="@color/color_eeeeee"
        app:title_color="@color/color_303030"
        app:right_spacing="12dp"
        app:right_text_size="@dimen/dimens_16sp"
        app:title="推送通知设置"
        app:right_text="@string/string_complete"
        app:right_text_color="@color/color_fb716b"
        app:title_size="@dimen/title_size" />

    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:text="收到关注时推送通知"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/dimens_15sp" />


        <CheckBox
            android:id="@+id/cb_notice_config_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_16dp"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_swich" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:text="收到评论/回复时推送通知"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/dimens_15sp" />


        <CheckBox
            android:id="@+id/cb_notice_config_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_16dp"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_swich" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:text="收到点赞时推送通知"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/dimens_15sp" />


        <CheckBox
            android:id="@+id/cb_notice_config_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_16dp"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_swich" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_16dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:text="接收精选内容通知"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/dimens_15sp" />


        <CheckBox
            android:id="@+id/cb_notice_config_recv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_16dp"
            android:layout_centerVertical="true"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_swich" />
    </RelativeLayout>

</LinearLayout>

