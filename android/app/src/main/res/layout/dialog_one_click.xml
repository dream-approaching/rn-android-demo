<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_upload_progress"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="49dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_report_diolog_report"
            android:drawablePadding="@dimen/dimens_5dp"
            android:text="@string/string_report"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/dimens_19sp" />

        <ImageView
            android:id="@+id/iv_dialog_report_clase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:padding="@dimen/dimens_5dp"
            android:src="@drawable/ic_report_close" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/color_eeeeee"></View>

    <ListView
        android:id="@+id/lv_report_dialog"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
