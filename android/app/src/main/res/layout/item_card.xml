<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_20dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp">
    <ImageView
        android:id="@+id/iv_item_card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_22dp"
            android:layout_marginTop="@dimen/dimens_19dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_card_title"
            android:layout_marginLeft="@dimen/dimens_22dp"
            android:layout_marginTop="@dimen/dimens_11dp"
            android:lineSpacingExtra="7dp"
            android:maxEms="8"
            android:maxLines="2"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimens_28dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_card_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_card_index_back" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_item_card_comments"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_index_comments" />
                <TextView
                    android:id="@+id/tv_item_card_comments_num"
                    android:text="19sp"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:textSize="8sp"
                    android:textColor="@color/color_fb716b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_item_card_collection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_card_index_collection" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>