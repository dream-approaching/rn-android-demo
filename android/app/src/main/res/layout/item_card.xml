<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimens_30dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_item_card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <TextView
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginTop="@dimen/dimens_19dp"
            android:layout_marginLeft="@dimen/dimens_22dp"
            android:id="@+id/tv_item_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:textStyle="bold"
            android:maxLines="2"
            android:maxEms="8"
            android:layout_below="@+id/tv_item_card_title"
            android:layout_marginTop="@dimen/dimens_13dp"
            android:layout_marginLeft="@dimen/dimens_22dp"
            android:id="@+id/tv_item_card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="8dp"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_marginBottom="@dimen/dimens_28dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_item_card_back"
                android:src="@drawable/ic_card_index_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_item_card_comments"
                android:src="@drawable/ic_card_index_comments"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_item_card_collection"
                android:src="@drawable/ic_card_index_collection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>