<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_10dp"
        app:cardCornerRadius="@dimen/dimens_10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_first_fg_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_first_fg_title"
                android:layout_margin="@dimen/dimens_10dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/dimens_15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_first_fg_bg" />

            <RelativeLayout
                android:layout_below="@+id/tv_first_fg_title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:layout_height="wrap_content">
                <com.lieying.petcat.widget.NiceImageView
                    android:id="@+id/iv_first_fg_header"
                    app:is_circle="true"
                    android:layout_width="@dimen/dimens_20dp"
                    android:layout_height="@dimen/dimens_20dp" />
                <TextView
                    android:id="@+id/tv_first_fg_nick"
                    android:layout_toRightOf="@+id/iv_first_fg_header"
                    android:textSize="@dimen/dimens_12sp"
                    android:textColor="@color/color_222222"
                    android:layout_marginLeft="@dimen/dimens_7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/tv_first_fg_praise"
                    android:textSize="@dimen/dimens_12sp"
                    android:textColor="@color/color_777777"
                    android:drawableLeft="@drawable/ic_praise_small_n"
                    android:drawablePadding="@dimen/dimens_5dp"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>