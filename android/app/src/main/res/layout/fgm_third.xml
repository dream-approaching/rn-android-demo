<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.TabLayout
        android:layout_marginTop="@dimen/dimens_40dp"
        android:id="@+id/tab_third_fragment_progress"
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="38dp"
        android:layout_marginLeft="@dimen/dimens_20dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabIndicatorColor="@color/colorCommonRed"
        app:tabIndicatorHeight="@dimen/dimens_2dp"
        app:tabSelectedTextColor="@color/text_color_normal"
        app:tabIndicator="@drawable/ic_tab_indicator"
        app:tabTextColor="@color/text_color_gray" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimens_42dp"
            android:layout_marginRight="@dimen/dimens_25dp"
            android:src="@drawable/ic_home_top_search" />
    </RelativeLayout>
    
    <View
        android:layout_marginTop="@dimen/dimens_5dp"
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>