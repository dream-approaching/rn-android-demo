<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lieying.socialappstore.widget.NiceImageView
        android:id="@+id/iv_item_second_logo"
        android:layout_width="@dimen/dimens_42dp"
        android:layout_height="@dimen/dimens_42dp"
        android:layout_marginLeft="@dimen/dimens_16dp"
        android:layout_marginTop="@dimen/dimens_17dp"
        android:src="@drawable/ic_home_top_search"
        app:corner_radius="8dp" />

    <TextView
        android:id="@+id/tv_item_second_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_14dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:layout_toRightOf="@+id/iv_item_second_logo"
        android:text="即刻"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/dimens_18sp" />

    <TextView
        android:id="@+id/tv_item_second_content"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_second_title"
        android:layout_marginLeft="@dimen/dimens_38dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/ll_item_praise"
        android:layout_toRightOf="@+id/iv_item_second_logo"
        android:text="aaaaaaaaaaaaaaaaaaaa"
        android:textSize="@dimen/dimens_15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_second_title"
        android:layout_alignLeft="@+id/tv_item_second_title"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:src="@drawable/ic_rectangle_left" />

    <ImageView
        android:id="@+id/iv_item_second_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_second_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp"
        android:src="@drawable/ic_rectangle_right" />

    <LinearLayout
        android:id="@+id/ll_item_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_3dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_praise"
            android:layout_width="@dimen/dimens_24dp"
            android:layout_height="@dimen/dimens_24dp"
            android:src="@drawable/ic_second_praise_n" />

        <TextView
            android:id="@+id/tv_item_second_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_707070"
            android:textSize="@dimen/dimens_15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/iv_item_second_right"
        android:layout_alignLeft="@+id/tv_item_second_title"
        android:layout_marginTop="@dimen/dimens_12dp"
        android:background="@color/color_eeeeee" />
</RelativeLayout>