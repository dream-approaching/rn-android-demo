<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selected_normal_click_bg"
   >
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dimens_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_topic_imgs"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_item_topic_join"
                android:text="5人已参与"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/join_base_img"
                android:layout_marginTop="@dimen/dimens_13dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/iv_item_topic_title"
                android:text="aaa"
                android:textSize="@dimen/dimens_17sp"
                android:textColor="@color/color_303030"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_16dp"
                android:layout_below="@+id/iv_item_topic_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="来，畅所欲言吧"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:textSize="@dimen/dimens_13sp"
                android:textColor="@color/color_707070"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_12dp"
                android:layout_below="@+id/iv_item_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>