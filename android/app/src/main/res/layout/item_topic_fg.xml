<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selected_normal_click_bg"
   >
    <com.bigman.wmzx.customcardview.library.CardView
        android:layout_marginTop="@dimen/dimens_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:startColor="#12000000"
        app:endColor="#00000000"
        app:cardCornerRadius="5dp"
        app:contentPadding="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lieying.petcat.widget.NiceImageView
                android:id="@+id/iv_item_topic_imgs"
                app:corner_top_left_radius="@dimen/dimens_5dp"
                app:corner_bottom_left_radius="0dp"
                app:corner_bottom_right_radius="0dp"
                app:corner_top_right_radius="@dimen/dimens_5dp"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tv_item_topic_join"
                android:text="5人已参与"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/join_base_img"
                android:layout_marginTop="@dimen/dimens_13dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/iv_item_topic_title"
                android:text="aaa"
                android:textSize="@dimen/dimens_17sp"
                android:textColor="@color/color_303030"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_16dp"

                android:layout_below="@+id/iv_item_topic_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/iv_item_topic_content"
                android:text="来，畅所欲言吧"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:textSize="@dimen/dimens_13sp"
                android:lineSpacingExtra = "4dp"
                android:textColor="@color/color_707070"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_6dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/iv_item_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </com.bigman.wmzx.customcardview.library.CardView>

</RelativeLayout>