<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_scoll_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:contentScrim="#00ffffff"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_user_index_top"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_scrollFlags="scroll">

                <com.lieying.petcat.widget.NiceImageView
                    android:id="@+id/iv_user_index_head_icon"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="58dp"
                    android:src="@drawable/ic_default_header"
                    app:is_circle="true" />

                <ImageView
                    android:id="@+id/iv_user_index_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/iv_user_index_head_icon"
                    android:layout_alignBottom="@+id/iv_user_index_head_icon"
                    android:src="@drawable/ic_user_vip_big" />

                <TextView
                    android:id="@+id/tv_user_index_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_user_index_head_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_14dp"
                    android:text="夏东东"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_19sp" />

                <TextView
                    android:id="@+id/tv_user_index_user_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_index_user_nick"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_8dp"
                    android:text="深圳-网页设计师"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_12sp" />

                <TextView
                    android:id="@+id/tv_user_index_user_dignity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_user_index_user_position"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_8dp"
                    android:text="官方认证:树莓开发者"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_42dp"
                    android:layout_below="@+id/tv_user_index_user_dignity"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:background="#22FFFFFF"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_user_index_follow_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="关  注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimens_13sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimens_8dp"
                        android:layout_marginBottom="@dimen/dimens_8dp"
                        android:alpha="0.53"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/tv_user_index_fans_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="粉  丝"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimens_13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_index_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_15dp"
                    android:layout_marginTop="@dimen/dimens_40dp"
                    android:padding="@dimen/dimens_10dp"
                    android:src="@drawable/ic_back_white" />

                <TextView
                    android:id="@+id/tv_user_index_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dimens_42dp"
                    android:layout_marginRight="@dimen/dimens_15dp"
                    android:padding="@dimen/dimens_5dp"
                    android:text="@string/string_add_follow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_15sp" />
            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_user_index"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="@dimen/dimens_12dp"
            android:layout_marginRight="84dp"
            android:minWidth="200dp"
            app:tabIndicator="@drawable/ic_tab_indicator"
            app:tabIndicatorHeight="@dimen/dimens_2dp"
            app:tabSelectedTextColor="@color/text_color_normal"
            app:tabTextAppearance="@style/TabLayoutTextStyleIndex"
            app:tabTextColor="@color/text_color_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/color_eeeeee"></View>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_user_index"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimens_36dp"
        android:layout_height="wrap_content"
        android:background="@color/color_fb716b"
        app:layout_behavior="@string/string_behavior_sample_title" >

        <ImageView
            android:id="@+id/iv_user_index_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:padding="@dimen/dimens_8dp"
            android:src="@drawable/ic_back_white" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.lieying.petcat.widget.NiceImageView
                app:is_circle="true"
                android:id="@+id/iv_user_index_bar_head_icon"
                android:src="@drawable/ic_default_header"
                android:layout_width="@dimen/dimens_30dp"
                android:layout_height="@dimen/dimens_30dp" />
            <TextView
                android:id="@+id/iv_user_index_bar_nick_name"
                android:layout_marginLeft="@dimen/dimens_11dp"
                android:text="@string/app_name"
                android:textSize="@dimen/dimens_19sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
