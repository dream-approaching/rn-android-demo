<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_no_data_tip"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:text="暂无数据"
        android:textColor="@color/color_707070"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_no_data_bnt"
        android:textSize="@dimen/dimens_13sp"
        android:textColor="@color/color_fb716b"
        android:text="@string/string_report_other"
        android:padding="@dimen/dimens_3dp"
        android:gravity="center"
        android:background="@drawable/bg_no_data_bnt"
        android:layout_marginTop="@dimen/dimens_17dp"
        android:layout_below="@+id/tv_no_data_tip"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>