<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="小红书图片裁剪"
        app:titleTextColor="#FFF" />


    <com.weiwang.photoalbumlibrary.matisse.xiaohongshu.CoordinatorLinearLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.weiwang.photoalbumlibrary.matisse.xiaohongshu.MCropImageView
            android:id="@+id/crop_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <com.weiwang.photoalbumlibrary.matisse.xiaohongshu.CoordinatorRecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.weiwang.photoalbumlibrary.matisse.xiaohongshu.CoordinatorRecyclerView>


    </com.weiwang.photoalbumlibrary.matisse.xiaohongshu.CoordinatorLinearLayout>


</LinearLayout>